<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fddca6"
    tools:context="nl.mprog.kimschuiten.mypersonalcookbook30.ShowRecipeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showRecipeTitle"
        android:textStyle="bold"
        android:textSize="15pt" />

    <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#000000"
    android:layout_alignBottom="@+id/showRecipeTitle"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeTextView"
        android:layout_below="@+id/showRecipeTitle"
        android:capitalize="characters"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:id="@+id/recipeImageView"
        android:layout_below="@+id/showRecipeTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/homeButton"
        android:id="@+id/HomeButton"
        android:onClick="HomeButtonClick"
        android:background="#b34708"
        android:textColor="#faf6f6"/>
</RelativeLayout>
